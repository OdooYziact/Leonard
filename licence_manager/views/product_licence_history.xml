<odoo>
    <record id="product_licence_history" model="ir.ui.view">
        <field name="name">Licence History</field>
        <field name="model">product.licence</field>
        <field name="arch" type="xml">
            <tree create="0" string="PRODUCTS">
                <!--><field name="id"/>-->
               <!--><field name="subscription_line_id"/>-->
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="editor_id"/>
                <field name="provider_ids" widget="many2many_tags"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>
     <record id="product_history" model="ir.ui.view">
        <field name="name">History Licence</field>
        <field name="model">product.licence</field>
        <field name="arch" type="xml">
            <form string="History">
                <sheet>
                    <group col="4">
                        <field name="product_id"/>
                        <field name="partner_id"/>
                        <field name="editor_id"/>
                        <field name="provider_ids" widget="many2many_tags"/>
                        <field name="quantity"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_open_licence_history" model="ir.actions.act_window">
        <field name="name">Licence History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.licence</field>
        <field name="groups_id" eval="[(6, False, [ref('base.group_user')])]"/>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="licence_manager.product_licence_history"/>
    </record>

    <menuitem action="action_open_licence_history"
              id="licence_history"
              parent="stock.menu_stock_inventory_control"
              sequence="11"
              groups="stock.group_stock_user"/>
</odoo>

