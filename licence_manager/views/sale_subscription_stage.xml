<odoo>
    <record id="sale_subscription_stage_form_view_" model="ir.ui.view">
        <field name="name">Stage Status</field>
        <field name="model">sale.subscription.stage</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_stage_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rating_template_id']" position="after">
                    <field name="name"/>
                    <field name="sequence" groups="base.group_no_one"/>
                    <field name="status"/>
            </xpath>
        </field>
    </record>
</odoo>

