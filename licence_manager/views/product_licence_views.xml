<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_licence_tree" model="ir.ui.view">
        <field name="name">product licence list</field>
        <field name="model">product.licence</field>
        <field name="arch" type="xml">
            <tree string="Product" multi_edit="1">
<!--            <tree string="Product" multi_edit="1" >-->
                <field name="product_id" optional="show"/>
                <field name="customer_id" optional="show"/>
                <field name="editor_id" optional="hide"/>
                <field name="provider_id" optional="hide"/>
                <field name="quantity" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="action_open_licence_manager" model="ir.actions.act_window">
        <field name="name">Licence Manager</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.licence</field>
        <field name="groups_id" eval="[(6,0,[ref('base.group_user')])]"/>
        <field name="view_mode">tree</field>
        <field name="view_id" eval="ref('licence_manager.product_licence_tree')"/>
    </record>

    <menuitem id="menu_licence" name="Licence Manager" parent="stock.menu_stock_inventory_control" sequence="10" action="action_open_licence_manager"/>

</odoo>



