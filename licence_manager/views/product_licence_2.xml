<odoo>
    <record id="product_licence_tree" model="ir.ui.view">
        <field name="name">Licence Manager</field>
        <field name="model">product.licence</field>
        <field name="arch" type="xml">
            <tree create="0" string="PRODUCTS">
                <field name="subscription_id"/>
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="editor_id"/>
                <field name="provider_ids" widget="many2many_tags"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <record id="action_open_licence_manager" model="ir.actions.act_window">
        <field name="name">Licence Manager</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.licence</field>
        <field name="groups_id" eval="[(6, False, [ref('base.group_user')])]"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="licence_manager.product_licence_tree"/>
    </record>

    <menuitem action="action_open_licence_manager"
              id="menu_licence"
              parent="stock.menu_stock_inventory_control"
              sequence="10"
              groups="stock.group_stock_user"/>
</odoo>

