<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product licence manager</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/> <!--avais pas le only-->
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="is_licence"/>
                    <label for="is_licence"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='type']" position="before">
                <div>
                    <group name="product.group_product_variant">
                        <label for="editor_id" class='font-weight-bold' attrs="{'invisible':[('is_licence', '!=', True)]}"/>
                    </group>
                    <field name="editor_id" class='font-weight-bold' attrs="{'invisible':[('is_licence', '!=', True)]}"/> <!-- pour l'instant il affiche l'id et non le nom de l'editeur -->
                </div>
            </xpath>
        </field>
    </record>
</odoo>

